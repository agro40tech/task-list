{
	"name": "todo-list",
	"version": "0.1.2",
	"private": true,
	"dependencies": {
		"@reduxjs/toolkit": "^2.2.1",
		"clsx": "^2.1.0",
		"framer-motion": "^11.0.14",
		"normalize.css": "^8.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-redux": "^9.1.0",
		"react-scripts": "5.0.1",
		"react-tooltip": "^5.26.3",
		"uuid": "^9.0.1",
		"web-vitals": "^2.1.4"
	},
	"scripts": {
		"build": "react-scripts build",
		"start": "react-scripts start",
		"stylelint": "stylelint \"src/**/*.{css,scss}\"",
		"stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
		"lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
		"format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --ignore-path ./.prettierignore",
		"check": "npm run stylelint:fix && npm run lint && npm run format",
		"prepare": "husky install",
		"commit": "npm run check && cz"
	},
	"lint-staged": {
		"*.{css,scss}": "npm run stylelint:fix",
		"*.{js,jsx,ts,tsx}": "npm run lint",
		"*.{js,jsx,ts,tsx,json,css,scss,md}": "npm run format"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^14.2.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.25",
		"@types/react": "^18.2.64",
		"@types/react-dom": "^18.2.21",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/typescript-estree": "^7.1.1",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-postcss-modules": "^2.0.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-sonarjs": "^0.24.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"sass": "^1.71.1",
		"standard-version": "^9.5.0",
		"stylelint": "^16.3.1",
		"stylelint-config-clean-order": "^5.4.1",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-config-standard-scss": "^13.1.0",
		"stylelint-order": "^6.0.4",
		"typescript": "^4.9.5",
		"typescript-plugin-css-modules": "^5.1.0"
	}
}
